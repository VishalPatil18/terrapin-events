<mjml>
  <mj-head>
    <mj-title>{{eventTitle}} - Starting Soon!</mj-title>
    <mj-attributes>
      <mj-all font-family="Arial, Helvetica, sans-serif" />
      <mj-text font-size="14px" color="#555555" line-height="24px" />
      <mj-button background-color="#E03A3E" color="#ffffff" font-weight="bold" border-radius="4px" padding="12px 30px" />
    </mj-attributes>
    <mj-style>
      .umd-red { color: #E03A3E; }
      .umd-gold { color: #FFD520; }
      .card { background-color: #f9f9f9; border-radius: 8px; padding: 20px; margin: 10px 0; }
    </mj-style>
  </mj-head>
  
  <mj-body background-color="#f4f4f4">
    
    <!-- Header Section with UMD Branding -->
    <mj-section background-color="#dc3545" padding="30px 20px">
      <mj-column>
        <mj-text align="center" color="#ffffff" font-size="28px" font-weight="bold" padding="0">
          ğŸš€ Starting in 1 Hour!
        </mj-text>
        <mj-text align="center" color="#ffffff" font-size="16px" padding="10px 0 0 0">
          Terrapin Events
        </mj-text>
      </mj-column>
    </mj-section>

    <!-- Urgent Reminder Alert -->
    <mj-section background-color="#f8d7da" border="3px solid #dc3545" padding="20px 25px">
      <mj-column>
        <mj-text font-size="18px" color="#721c24" font-weight="bold" align="center">
          âš¡ Your event starts at {{eventTime}}
        </mj-text>
        <mj-text font-size="14px" color="#721c24" align="center" padding="10px 0 0 0">
          Time to head over!
        </mj-text>
      </mj-column>
    </mj-section>

    <!-- Greeting -->
    <mj-section background-color="#ffffff" padding="40px 25px 20px">
      <mj-column>
        <mj-text font-size="18px" color="#333333" font-weight="bold">
          Hi {{userName}},
        </mj-text>
        <mj-text font-size="16px" color="#555555" line-height="26px">
          <strong>{{eventTitle}}</strong> starts in one hour! Make sure you're ready to go.
        </mj:text>
      </mj-column>
    </mj-section>

    <!-- Event Details Card - Highlighted -->
    <mj-section background-color="#ffffff" padding="0 25px 30px">
      <mj-column background-color="#fff3cd" border="3px solid #ffc107" border-radius="8px" padding="25px">
        <mj-text font-size="20px" font-weight="bold" color="#E03A3E" padding="0 0 15px 0" align="center">
          ğŸ“ Location & Time
        </mj-text>
        <mj-text font-size="16px" line-height="30px" align="center">
          <strong>{{eventTime}}</strong><br/>
          <strong>{{eventLocation}}</strong><br/>
          {{#if eventRoom}}Room: {{eventRoom}}{{/if}}
        </mj-text>
        {{#if locationMapUrl}}
        <mj-button href="{{locationMapUrl}}" padding="20px 0 0 0">
          Get Directions Now
        </mj-button>
        {{/if}}
      </mj-column>
    </mj-section>

    <!-- QR Code - Large and Prominent -->
    <mj-section background-color="#ffffff" padding="0 25px 30px">
      <mj-column background-color="#e8f5e9" border="2px solid #28a745" border-radius="8px" padding="25px">
        <mj-text font-size="18px" font-weight="bold" color="#333333" padding="0 0 15px 0" align="center">
          ğŸŸï¸ Have Your Ticket Ready
        </mj-text>
        {{#if qrCodeUrl}}
        <mj-image src="{{qrCodeUrl}}" alt="Event Check-in QR Code" width="280px" padding="15px 0" />
        {{/if}}
        <mj-text font-size="14px" color="#666666" align="center" padding="15px 0 0 0">
          Show this at check-in (digital or printed)
        </mj-text>
        <mj-text font-size="13px" line-height="24px" align="center">
          Ticket #: {{ticketNumber}}
        </mj-text>
      </mj-column>
    </mj-section>

    <!-- Last Minute Checklist -->
    <mj-section background-color="#ffffff" padding="0 25px 40px">
      <mj-column border-top="2px solid #f0f0f0" padding="30px 0 0 0">
        <mj-text font-size="16px" color="#333333" font-weight="bold" align="center">
          âœ… Final Checklist:
        </mj-text>
        <mj-text font-size="15px" color="#333333" line-height="28px" padding="15px 0 0 0">
          âœ“ Leave now (arrive 10 minutes early)<br/>
          âœ“ Bring student ID<br/>
          âœ“ Have QR code ready (above)<br/>
          {{#if parkingInfo}}âœ“ {{parkingInfo}}<br/>{{/if}}
          {{#if requirements}}âœ“ {{requirements}}{{/if}}
        </mj-text>
      </mj-column>
    </mj-section>

    <!-- Contact Info -->
    <mj-section background-color="#f9f9f9" padding="30px 25px">
      <mj-column>
        <mj-text font-size="14px" color="#333333" font-weight="bold" align="center">
          Running Late or Have Questions?
        </mj-text>
        <mj-text font-size="13px" color="#666666" align="center" padding="10px 0">
          {{#if organizerPhone}}Call/Text: {{organizerPhone}}<br/>{{/if}}
          {{#if organizerEmail}}Email: {{organizerEmail}}{{/if}}
        </mj-text>
      </mj-column>
    </mj-section>

    <!-- Quick Action -->
    <mj-section background-color="#ffffff" padding="30px 25px">
      <mj-column>
        <mj-button href="{{eventUrl}}" align="center" background-color="#17a2b8">
          View Event Details
        </mj-button>
      </mj-column>
    </mj-section>

    <!-- Last Minute Cancel -->
    <mj-section background-color="#ffffff" padding="0 25px 30px">
      <mj-column>
        <mj-text font-size="12px" color="#999999" align="center">
          Can't make it last minute?
        </mj-text>
        <mj-text font-size="12px" color="#999999" align="center" padding="5px 0">
          <a href="{{cancelUrl}}" style="color: #dc3545; text-decoration: none;">Cancel now to release your spot</a>
        </mj-text>
      </mj-column>
    </mj-section>

    <!-- Footer -->
    <mj-section background-color="#333333" padding="30px 20px">
      <mj-column>
        <mj-text align="center" color="#ffffff" font-size="13px" line-height="22px">
          <strong>Terrapin Events</strong><br/>
          University of Maryland<br/>
          College Park, MD 20742
        </mj-text>
        <mj-divider border-color="#555555" border-width="1px" padding="20px 0" />
        <mj-text align="center" font-size="12px" color="#999999" line-height="20px">
          Final reminder for your registered event.<br/>
          <a href="{{supportUrl}}" style="color: #FFD520; text-decoration: none;">Support</a>
        </mj-text>
        <mj-text align="center" font-size="11px" color="#777777" padding="15px 0 0 0">
          Â© {{currentYear}} University of Maryland. All rights reserved.
        </mj-text>
      </mj-column>
    </mj-section>

  </mj-body>
</mjml>
